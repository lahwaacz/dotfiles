# disable welcome message
startup_message off

# override value of $TERM
term xterm-256color

# disable visual bell
vbell off

# enable alternative screen (used by e.g. text editors and pagers)
altscreen on

# bigger scrollback
defscrollback 10000

# start window numbering at 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# informative statusbar
truecolor on
hardstatus off
hardstatus alwayslastline '%{#ffffff} %{7}%?%-Lw%?%{1;0}%{1}(%{15}%n%f%t%?(%u)%?%{1;0}%{1})%{7}%?%+Lw%? %='
